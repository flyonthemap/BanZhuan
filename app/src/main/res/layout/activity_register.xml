<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_register"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="scroll|enterAlways|snap" />
    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_user_name"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="4"
                android:id="@+id/et_user_name"
                android:background="@drawable/edit_shape"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_edit_text_height"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLength="20"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_phone_num"
            android:layout_below="@+id/ll_user_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_num"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="4"
                android:singleLine="true"
                android:id="@+id/et_phone_num"
                android:background="@drawable/edit_shape"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_edit_text_height"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLength="11"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_auth_code"
            android:layout_below="@+id/ll_phone_num"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/auth_code"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="2"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/et_auth_code"
                android:background="@drawable/edit_shape"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_edit_text_height"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLength="6"/>
            <Button
                android:id="@+id/btn_auth_code"
                android:background="@drawable/btn_shape"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/get_code"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_below="@+id/ll_auth_code"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:layout_weight="1"/>
            <EditText
                android:layout_weight="4"
                android:singleLine="true"
                android:id="@+id/et_password"
                android:inputType="textPassword"
                android:background="@drawable/edit_shape"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_edit_text_height"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:maxLength="20"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_button_height"
            android:layout_below="@id/ll_password"
            android:layout_marginTop="30dp"
            android:background="#ff336699"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="@string/register"/>
    </RelativeLayout>

</RelativeLayout>